#:kivy 1.11.1

<MainWidget>:
    orientation: 'vertical'
    canvas: 
        Color:
            rgb: 0.5,0.5,0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        Label:
            text: 'SUPERVISÓRIO REFINARIA v1.0'
            size_hint_x: None
            width: 300
        BoxLayout:
            orientation:'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation:'horizontal'
                Button:
                    text:"MODBUS"
                    on_release: root._modbusPopup.open()
                Button:
                    text:"ScanTime"  
                    on_release: root._scanPopup.open()
        Image:
            id:img_con
            size_hint_x: None
            width: 80
            source:'imgs/desconectado.png'
            position_hint: {'top':1, 'right':1}
    FloatLayout:
        canvas: 
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/Refinaria.png'
        Label:
            id: lb_temp
            size_hint:(None, None)
            size: (termometro.size[0]*0.25, termometro.size[1]*0.25)
            pos_hint: {'x': -0.06, 'y': 0.3}
            canvas:
                Color:
                    rgb: 1,0,0
                Rectangle:
                    size: self.size
                    pos: (self.pos[0]+self.width*1.5,self.pos[1])    
        Image:
            id: termometro
            source: 'imgs/termometro.png'
            size_hint: 0.17,0.17
            pos_hint: lb_temp.pos_hint

        Button:
            size_hint:(None, None)
            size: (0.65*62, 0.65*58)   # a imagem tem 62x58 pixels
            background_normal: 'imgs/graph_icon.jpg'
            background_down: 'imgs/graph_icon.jpg'
            pos_hint: {'x':0.002, 'y': 0.22}
            on_release:
                root._graph.open()



        Label:
            id: fornalha
            text: '-.- °C'  
            font_size: 25
            bold: True
            halign: 'center'
            pos_hint: {'x': -0.45, 'y': 0.01}
            color: 0,0,0,1
        TempLabel:
            id: gas_ref 
            pos_hint: {'x': 0.175, 'y': 0.28}
        TempLabel:
            id: gasolina
            pos_hint: {'x': 0.175, 'y': 0.205}
        TempLabel:
            id: nafta
            pos_hint: {'x': 0.175, 'y': 0.13}
        TempLabel:
            id: querosene
            pos_hint: {'x': 0.175, 'y': 0.055}            
        TempLabel:
            id: diesel
            pos_hint: {'x': 0.175, 'y': -0.02}
        TempLabel:
            id: oleo_lub
            pos_hint: {'x': 0.175, 'y': -0.095}
        TempLabel:
            id: oleo_comb
            pos_hint: {'x': 0.175, 'y': -0.17}
        TempLabel:
            id: residuos
            pos_hint: {'x': 0.175, 'y': -0.245}


<TempLabel@Label>:
    text: '-.- °C'
    font_size: 20
    bold: True
    halign: 'center'
    color: 0,0,0,1

 